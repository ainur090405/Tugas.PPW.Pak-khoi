<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Data Users (Superadmin)</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-4">
    <!-- Header dengan tombol kembali -->
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0">Data Users (Superadmin)</h2>
      <div>
        <a href="/superadmin" class="btn btn-secondary me-2">â¬… Kembali</a>
        <a href="/superadmin/users/create" class="btn btn-primary">+ Tambah User</a>
      </div>
    </div>

    <!-- Tabel Data User -->
    <table class="table table-bordered table-striped shadow-sm">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Nama</th>
          <th>Email</th>
          <th>Role</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if (users.length > 0) { %>
          <% users.forEach(u => { %>
            <tr>
              <td><%= u.id_user %></td>
              <td><%= u.nama %></td>
              <td><%= u.email %></td>
              <td><%= u.role %></td>
              <td>
                <a href="/superadmin/users/edit/<%= u.id_user %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/superadmin/users/delete/<%= u.id_user %>" 
                   class="btn btn-danger btn-sm"
                   onclick="return confirm('Yakin mau hapus user ini?')">Hapus</a>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center text-muted">Belum ada data user</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
