<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Tarif</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <div class="card shadow-lg border-0">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Edit Tarif</h3>
      </div>
      <div class="card-body">

        <!-- Flash Message -->
        <% if (typeof message !== 'undefined' && message) { %>
          <div class="alert alert-info"><%= message %></div>
        <% } %>

        <!-- Form Edit -->
        <form method="POST" action="/superadmin/tarif/edit/<%= tarif.id_tarif %>">
          
          <div class="mb-3">
            <label class="form-label">Jenis Kendaraan</label>
            <select class="form-select" name="type" required>
              <option value="mobil" <%= tarif.type === 'mobil' ? 'selected' : '' %>>Mobil</option>
              <option value="motor" <%= tarif.type === 'motor' ? 'selected' : '' %>>Motor</option>
            </select>
          </div>

          <div class="mb-3">
            <label class="form-label">Harga</label>
            <input type="number" step="0.01" class="form-control" name="harga" value="<%= tarif.harga %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Satuan Waktu</label>
            <select class="form-select" name="satuan_waktu" required>
              <option value="20_menit" <%= tarif.satuan_waktu === '20_menit' ? 'selected' : '' %>>20 Menit</option>
              <option value="1_jam" <%= tarif.satuan_waktu === '1_jam' ? 'selected' : '' %>>1 Jam</option>
              <option value="per_hari" <%= tarif.satuan_waktu === 'per_hari' ? 'selected' : '' %>>Per Hari</option>
              <option value="per_bulan" <%= tarif.satuan_waktu === 'per_bulan' ? 'selected' : '' %>>Per Bulan</option>
            </select>
          </div>

          <div class="d-flex justify-content-between">
            <a href="/superadmin/tarif" class="btn btn-secondary">Kembali</a>
            <button type="submit" class="btn btn-success">Update</button>
          </div>

        </form>
      </div>
    </div>
  </div>

</body>
</html>
