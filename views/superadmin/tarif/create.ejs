<h2>Tambah Tarif</h2>
<form method="POST" action="/superadmin/tarif/create">
  <select name="type">
    <option value="mobil">Mobil</option>
    <option value="motor">Motor</option>
  </select><br>
  <input type="number" step="0.01" name="harga" placeholder="Harga"><br>
  <select name="satuan_waktu">
    <option value="20_menit">20 Menit</option>
    <option value="1_jam">1 Jam</option>
    <option value="per_hari">Per Hari</option>
    <option value="per_bulan">Per Bulan</option>
  </select><br>
  <button type="submit">Simpan</button>
</form>
