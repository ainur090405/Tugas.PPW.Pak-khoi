<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Data Kendaraan (Superadmin)</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container my-4">
  <h2 class="mb-4">Data Kendaraan (Superadmin)</h2>

  <div class="mb-3">
    <a href="/superadmin" class="btn btn-secondary me-2">â¬… Kembali</a>
    <a href="/superadmin/kendaraan/create" class="btn btn-primary">
      Tambah Kendaraan
    </a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle">
          <thead class="table-dark text-center">
            <tr>
              <th>ID</th>
              <th>Plat</th>
              <th>Tipe</th>
              <th>Warna</th>
              <th>Status</th>
              <th>Tarif</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% kendaraan.forEach(k => { %>
              <tr>
                <td class="text-center"><%= k.id_kendaraan %></td>
                <td><%= k.opol %></td>
                <td><%= k.type %></td>
                <td><%= k.warna %></td>
                <td>
                  <% if (k.status === 'Tersedia') { %>
                    <span class="badge bg-success">Tersedia</span>
                  <% } else { %>
                    <span class="badge bg-danger"><%= k.status %></span>
                  <% } %>
                </td>
                <td class="text-end">
                  <%= k.Tarif ? "Rp " + k.Tarif.harga.toLocaleString() : '-' %>
                </td>
                <td class="text-center">
                  <a href="/superadmin/kendaraan/edit/<%= k.id_kendaraan %>" class="btn btn-sm btn-warning me-1">Edit</a>
                  <a href="/superadmin/kendaraan/delete/<%= k.id_kendaraan %>" class="btn btn-sm btn-danger" onclick="return confirm('Yakin hapus data ini?')">Hapus</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
