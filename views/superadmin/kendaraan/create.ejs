<!DOCTYPE html>
<html>
<head>
  <title>Tambah Kendaraan</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <div class="card shadow border-0">
      <div class="card-body">
        <h2 class="text-center text-success mb-4">Tambah Kendaraan</h2>

        <form method="POST" action="/superadmin/kendaraan/create">
          <!-- Plat Nomor -->
          <div class="mb-3">
            <label class="form-label">Plat Nomor</label>
            <input type="text" class="form-control" name="opol" placeholder="Plat Nomor" required>
          </div>

          <!-- Tipe Kendaraan -->
          <div class="mb-3">
            <label class="form-label">Tipe Kendaraan</label>
            <select class="form-select" name="type" required>
              <option value="mobil">Mobil</option>
              <option value="motor">Motor</option>
            </select>
          </div>

          <!-- Warna -->
          <div class="mb-3">
            <label class="form-label">Warna</label>
            <input type="text" class="form-control" name="warna" placeholder="Warna" required>
          </div>

          <!-- Tanggal Masuk -->
          <div class="mb-3">
            <label class="form-label">Tanggal Masuk</label>
            <input type="date" class="form-control" name="tanggal_masuk" required>
          </div>

          <!-- Jam Masuk -->
          <div class="mb-3">
            <label class="form-label">Jam Masuk</label>
            <input type="time" class="form-control" name="jam_masuk" required>
          </div>

          <!-- Tarif -->
          <div class="mb-3">
            <label class="form-label">Tarif</label>
            <select class="form-select" name="id_tarif" required>
              <% tarif.forEach(t => { %>
                <option value="<%= t.id_tarif %>"><%= t.type %> - <%= t.harga %></option>
              <% }) %>
            </select>
          </div>

          <!-- Tombol -->
          <div class="d-flex justify-content-between">
            <a href="/superadmin/kendaraan" class="btn btn-secondary">Batal</a>
            <button type="submit" class="btn btn-success">Simpan</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
