<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Data Pengunjung (Superadmin)</title>
  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-4">
    <h2 class="mb-4 text-center">Data Pengunjung (Superadmin)</h2>

    <div class="d-flex justify-content-end mb-3">
      <a href="/superadmin" class="btn btn-secondary me-2">â¬… Kembali</a>
      <a href="/superadmin/pengunjung/create" class="btn btn-success">+ Tambah Pengunjung</a>
    </div>

    <table class="table table-bordered table-striped table-hover">
      <thead class="table-dark text-center">
        <tr>
          <th>ID</th>
          <th>Wajah</th>
          <th>Pakaian</th>
          <th>Jenis Kelamin</th>
          <th>Kendaraan</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if (pengunjung.length > 0) { %>
          <% pengunjung.forEach(p => { %>
            <tr>
              <td class="text-center"><%= p.id_pengunjung %></td>
              <td><%= p.wajah %></td>
              <td><%= p.pakaian %></td>
              <td class="text-center"><%= p.jenis_kelamin %></td>
              <td class="text-center"><%= p.Kendaraan ? p.Kendaraan.opol : '-' %></td>
              <td class="text-center">
                <a href="/superadmin/pengunjung/edit/<%= p.id_pengunjung %>" class="btn btn-sm btn-warning">Edit</a>
                <a href="/superadmin/pengunjung/delete/<%= p.id_pengunjung %>" class="btn btn-sm btn-danger" onclick="return confirm('Yakin ingin menghapus data ini?')">Hapus</a>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="6" class="text-center text-muted">Belum ada data pengunjung</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
