<h2>Edit Pengunjung</h2>
<form method="POST" action="/superadmin/pengunjung/edit/<%= pengunjung.id_pengunjung %>">
  <input type="text" name="wajah" value="<%= pengunjung.wajah %>"><br>
  <input type="text" name="pakaian" value="<%= pengunjung.pakaian %>"><br>
  <select name="jenis_kelamin">
    <option value="Laki-laki" <%= pengunjung.jenis_kelamin === 'Laki-laki' ? 'selected' : '' %>>Laki-laki</option>
    <option value="Perempuan" <%= pengunjung.jenis_kelamin === 'Perempuan' ? 'selected' : '' %>>Perempuan</option>
  </select><br>
  <input type="number" name="id_kendaraan" value="<%= pengunjung.id_kendaraan %>"><br>
  <button type="submit">Update</button>
</form>
