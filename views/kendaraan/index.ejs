<%- include('../partials/_head') %>
<div class="container mt-5">
  <h2>Data Kendaraan</h2>
  <div class="mb-3">
    <a href="/dashboard" class="btn btn-secondary">← Kembali ke Dashboard</a>
    <a href="/kendaraan/create" class="btn btn-success">+ Tambah Kendaraan</a>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th><th>Plat</th><th>Type</th><th>Warna</th><th>Tarif</th><th>Status</th><th>Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% kendaraan.forEach(k => { %>
      <tr>
        <td><%= k.id_kendaraan %></td>
        <td><%= k.opol %></td>
        <td><%= k.type %></td>
        <td><%= k.warna %></td>
        <td><%= k.harga %> / <%= k.satuan_waktu %></td>
        <td><%= k.status %></td>
        <td>
          <a href="/kendaraan/edit/<%= k.id_kendaraan %>" class="btn btn-warning btn-sm">Edit</a>
          <a href="/kendaraan/delete/<%= k.id_kendaraan %>" class="btn btn-danger btn-sm">Hapus</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/_foot') %>
