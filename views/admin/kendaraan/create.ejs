<!DOCTYPE html>
<html>
<head>
  <title>Tambah Kendaraan (Admin)</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="text-primary">Tambah Kendaraan</h2>
      <a href="/admin/kendaraan" class="btn btn-secondary">â¬… Kembali</a>
    </div>

    <div class="card shadow border-0">
      <div class="card-body">
        <form action="/admin/kendaraan/create" method="POST">
          <!-- Plat Nomor -->
          <div class="mb-3">
            <label class="form-label">Plat Nomor</label>
            <input type="text" name="opol" class="form-control" placeholder="Contoh: M 1234 AB" required>
          </div>

          <!-- Jenis Kendaraan -->
          <div class="mb-3">
            <label class="form-label">Jenis Kendaraan</label>
            <select name="type" class="form-control" required>
              <option value="">-- Pilih Jenis --</option>
              <option value="mobil">Mobil</option>
              <option value="motor">Motor</option>
            </select>
          </div>

          <!-- Warna -->
          <div class="mb-3">
            <label class="form-label">Warna</label>
            <input type="text" name="warna" class="form-control" placeholder="Contoh: Hitam, Merah, Biru">
          </div>

          <!-- Tarif -->
          <div class="mb-3">
            <label class="form-label">Tarif</label>
            <select name="id_tarif" class="form-control" required>
              <option value="">-- Pilih Tarif --</option>
              <% tarif.forEach(t => { %>
                <option value="<%= t.id_tarif %>">
                  <%= t.type %> - Rp <%= t.harga %> / <%= t.satuan_waktu %>
                </option>
              <% }) %>
            </select>
          </div>

          <!-- Tanggal Masuk -->
          <div class="mb-3">
            <label class="form-label">Tanggal Masuk</label>
            <input type="date" name="tanggal_masuk" class="form-control" required>
          </div>

          <!-- Jam Masuk -->
          <div class="mb-3">
            <label class="form-label">Jam Masuk</label>
            <input type="time" name="jam_masuk" class="form-control" required>
          </div>

          <!-- Status -->
          <div class="mb-3">
            <label class="form-label">Status</label>
            <select name="status" class="form-control">
              <option value="in" selected>IN</option>
              <option value="out">OUT</option>
            </select>
          </div>

          <!-- Tombol -->
          <button type="submit" class="btn btn-success">Simpan</button>
          <a href="/admin/kendaraan" class="btn btn-danger">Batal</a>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
