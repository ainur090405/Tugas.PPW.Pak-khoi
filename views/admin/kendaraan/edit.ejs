<!DOCTYPE html>
<html>
<head>
  <title>Edit Kendaraan</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <div class="card shadow border-0">
      <div class="card-body">
        <h2 class="text-center text-primary mb-4">Edit Kendaraan</h2>

        <form method="POST" action="/admin/kendaraan/edit/<%= kendaraan.id_kendaraan %>">
          <!-- Plat Nomor -->
          <div class="mb-3">
            <label class="form-label">Plat Nomor</label>
            <input type="text" class="form-control" name="opol" value="<%= kendaraan.opol %>" required>
          </div>

          <!-- Tipe -->
          <div class="mb-3">
            <label class="form-label">Tipe Kendaraan</label>
            <select class="form-select" name="type" required>
              <option value="mobil" <%= kendaraan.type==='mobil'?'selected':'' %>>Mobil</option>
              <option value="motor" <%= kendaraan.type==='motor'?'selected':'' %>>Motor</option>
            </select>
          </div>

          <!-- Warna -->
          <div class="mb-3">
            <label class="form-label">Warna</label>
            <input type="text" class="form-control" name="warna" value="<%= kendaraan.warna %>" required>
          </div>

          <!-- Status -->
          <div class="mb-3">
            <label class="form-label">Status</label>
            <select class="form-select" name="status" required>
              <option value="in" <%= kendaraan.status==='in'?'selected':'' %>>In</option>
              <option value="out" <%= kendaraan.status==='out'?'selected':'' %>>Out</option>
            </select>
          </div>

          <!-- Tarif -->
          <div class="mb-3">
            <label class="form-label">Tarif</label>
            <select class="form-select" name="id_tarif" required>
              <% tarif.forEach(t => { %>
                <option value="<%= t.id_tarif %>" <%= t.id_tarif===kendaraan.id_tarif?'selected':'' %>>
                  <%= t.type %> - <%= t.harga %>
                </option>
              <% }) %>
            </select>
          </div>

          <!-- Tombol -->
          <div class="d-flex justify-content-between">
            <a href="/admin/kendaraan" class="btn btn-secondary">Batal</a>
            <button type="submit" class="btn btn-primary">Update</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
