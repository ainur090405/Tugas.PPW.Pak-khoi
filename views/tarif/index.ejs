<%- include('../partials/_head') %>
<div class="container mt-5">
  <h2>Data Tarif Parkir</h2>
  <div class="mb-3">
    <a href="/dashboard" class="btn btn-secondary">← Kembali ke Dashboard</a>
    <a href="/kendaraan/create" class="btn btn-success">+ Tambah Kendaraan</a>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th><th>Type</th><th>Harga</th><th>Satuan Waktu</th><th>Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% tarif.forEach(t => { %>
      <tr>
        <td><%= t.id_tarif %></td>
        <td><%= t.type %></td>
        <td><%= t.harga %></td>
        <td><%= t.satuan_waktu %></td>
        <td>
          <a href="/tarif/edit/<%= t.id_tarif %>" class="btn btn-warning btn-sm">Edit</a>
          <a href="/tarif/delete/<%= t.id_tarif %>" class="btn btn-danger btn-sm">Hapus</a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/_foot') %>
