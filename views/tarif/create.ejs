<%- include('../partials/_head') %>
<div class="container mt-5">
  <h2>Tambah Tarif Parkir</h2>

  <form action="/tarif/store" method="POST" class="card p-4">
    <div class="mb-3">
      <label for="type" class="form-label">Type Kendaraan</label>
      <input type="text" class="form-control" id="type" name="type" required>
    </div>

    <div class="mb-3">
      <label for="harga" class="form-label">Harga</label>
      <input type="number" class="form-control" id="harga" name="harga" required>
    </div>

    <div class="mb-3">
      <label for="satuan_waktu" class="form-label">Satuan Waktu</label>
      <select id="satuan_waktu" name="satuan_waktu" class="form-select" required>
        <option value="">-- Pilih Satuan --</option>
        <option value="jam">Per Jam</option>
        <option value="hari">Per Hari</option>
        <option value="bulan">Per Bulan</option>
      </select>
    </div>

    <button type="submit" class="btn btn-success">Simpan</button>
    <a href="/tarif" class="btn btn-secondary">Batal</a>
  </form>
</div>
<%- include('../partials/_foot') %>
